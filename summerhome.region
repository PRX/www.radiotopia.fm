<!doctype html>
<html class="touch-styles prx-v1">
  <head>
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    {.if template.mobileStylesEnabled}
    <meta name="viewport" content="width=device-width, initial-scale=1">
    {.end}
    {squarespace-headers}
    <script>/* Must be below squarespace-headers */(function(){var e='ontouchstart'in window||navigator.msMaxTouchPoints;var t=document.documentElement;if(!e&&t){t.className=t.className.replace(/touch-styles/,'')}})()
    </script>
    <!-- Begin MailChimp Signup Form -->
    <link href="//cdn-images.mailchimp.com/embedcode/classic-10_7.css" rel="stylesheet" type="text/css">
    <style type="text/css">
      #mc_embed_signup{background:#1c304c; clear:left; font:14px Helvetica,Arial,sans-serif; }
      /* Add your own MailChimp form style overrides in your site stylesheet or in this style block.
         We recommend moving this block and the preceding CSS link to the HEAD of your HTML file. */
    </style>
    <link rel="apple-touch-icon" href="/assets/apple-touch-180.png" />
  </head>

  <body id="{squarespace.page-id}" class="{squarespace.page-classes}{.if item}{.section item}{.if productType}{.or}{.background-source-video?} has-banner-image item-main-image{.or}{.main-image?} has-banner-image item-main-image{.end}{.end}{.end}{.end}{.or}{.section collection}{.collectionTypeNameEquals? index}{.section collections}{.section 0}{.background-source-video?} has-banner-image index-page{.or}{.main-image?} has-banner-image index-page{.end}{.end}{.end}{.end}{.or}{.background-source-video?} has-banner-image general-page{.or}{.main-image?} has-banner-image general-page{.end}{.end}{.end}{.end}{.end}">
    <input type="checkbox" name="mobile-nav-toggle" id="mobileNavToggle" class="mobile-nav-toggle-box hidden" /><a href="#" class="body-overlay"></a>
    <div class="sqs-announcement-bar-dropzone"></div>
    <div id="sidecarNav">
      <squarespace:navigation navigationId="mainNav" template="mobile-navigation" />
    </div>
    <div id="siteWrapper" class="clearfix home">

      <style>
        #headerNav nav a {
          color: #1D314D!important;
        }

        #summer-home-header {
          background: linear-gradient(to bottom, #d9f0f5 0%,#78cae2 100%);
          position: absolute;
          top: 0;
          left: 0;
          right: 0;
          height: 500px;
          z-index: 10;
        }

        @media only screen and (max-width: 640px) {
          #summer-home-header {
            height: 640px;
          }
        }
      </style>

      <div id="summer-home-header"></div>

      <div class="sqs-cart-dropzone"></div>

      <header id="header" class="show-on-scroll" data-offset-el=".index-section" data-offset-behavior="bottom" role="banner">
        <div class="header-inner">
          {.section website}<div id="{.if logoImageUrl}logoWrapper{.or}siteTitleWrapper{.end}" class="wrapper" data-content-field="site-title">
            {.section logoImageUrl}
              <h1 id="logoImage"><a href="/"><img src="{logoImageUrl}?format=1500w" alt="{siteTitle}" /></a></h1>
            {.or}
              <h1 id="siteTitle" class="site-title"><a href="/">{siteTitle}</a></h1>
            {.end}
          </div>{.end}<!-- comment the linebreak between these two elements because science
          --><label for="mobileNavToggle" class="mobile-nav-toggle-label"><div class="top-bar"></div><div class="middle-bar"></div><div class="bottom-bar"></div></label><label for="mobileNavToggle" class="mobile-nav-toggle-label fixed-nav-toggle-label"><div class="top-bar"></div><div class="middle-bar"></div><div class="bottom-bar"></div></label><!-- comment the linebreak between these two elements because science
          --><div id="headerNav"><squarespace:navigation navigationId="mainNav" template="navigation" /></div>
        </div>
      </header>
      <main id="page" role="main">
        <div class="inner">
          <style>
            #summer-home-block {
              height: 357px;
              position: relative;
              z-index: 20;
            }

            #logoImage img {
              width: 60px;
            }

            @media only screen and (max-width: 640px) {
              #summer-home-block {
                height: 530px;
                margin-bottom: 50px;
              }
            }

            #cloud1 {
              position: absolute;
              top: 200px;
              left: 30px;
              opacity: 0.7;
            }
            @media only screen and (max-width: 640px) { #cloud1 { left: -10px; top: 50px; opacity: 0.5; } }

            #cloud2 {
              position: absolute;
              bottom: 200px;
              right: 40px;
              width: 300px;
            }
            @media only screen and (max-width: 640px) { #cloud2 { right: -20px; top: 300px; width: 250px; opacity: 0.5; } }

            #cloud3 {
              position: absolute;
              top: 10px;
              left: 400px;
              width: 200px;
            }
            @media only screen and (max-width: 950px) { #cloud3 { display: none; } }

            #sun {
              position: absolute;
              top: -30px;
              left: 50px;
            }
            @media only screen and (max-width: 1160px) { #sun { width: 200px; } }
            @media only screen and (max-width: 1000px) { #sun { width: 150px; } }
            @media only screen and (max-width: 840px) { #sun { width: 120px; } }
            @media only screen and (max-width: 680px) { #sun { width: 100px; } }
            @media only screen and (max-width: 640px) { #sun { width: 100px; top: 0; left: 0; } }
            @media only screen and (max-width: 330px) { #sun { width: 100px; top: 35px; left: 0; } }

            #plane {
              position: absolute;
              top: -40px;
              right: 50px;
            }
            @media only screen and (max-width: 1160px) { #plane { width: 600px; } }
            @media only screen and (max-width: 1000px) { #plane { width: 500px; } }
            @media only screen and (max-width: 840px) { #plane { width: 400px; } }
            @media only screen and (max-width: 680px) { #plane { width: 370px; } }
            @media only screen and (max-width: 640px) { #plane { width: 370px; top: -80px; right: 20px; } }
            @media only screen and (max-width: 550px) { #plane { width: 300px; top: -80px; right: 20px; } }
            @media only screen and (max-width: 460px) { #plane { width: 250px; top: -80px; right: 20px; } }
            @media only screen and (max-width: 400px) { #plane { width: 220px; top: -80px; right: 20px; } }
            @media only screen and (max-width: 330px) { #plane { width: 200px; top: -25px; left: 0; } }

            #threeshows {
              text-transform: uppercase;
              font-size: 46px;
              font-weight: 700;
              color: #1D314D;
              position: absolute;
              top: 150px;
              left: 300px;
              padding-bottom: 14px;
              border-bottom: 6px solid orange;
            }
            @media only screen and (max-width: 1100px) { #threeshows { top: 130px; left: 280px; font-size: 42px; } }
            @media only screen and (max-width: 1000px) { #threeshows { top: 90px; left: 230px; font-size: 38px; } }
            @media only screen and (max-width: 640px) { #threeshows {
              top: -5px;
              left: 117px;
              line-height: 45px;
              width: 180px;
            } }
            @media only screen and (max-width: 340px) { #threeshows { width: 150px; } }
            @media only screen and (max-width: 330px) { #threeshows { top: 40px; font-size: 30px; line-height: 33px; } }

            #listenall {
              text-transform: uppercase;
              font-size: 28px;
              font-weight: 400;
              color: #1D314D;
              position: absolute;
              top: 210px;
              left: 300px;
            }
            @media only screen and (max-width: 1100px) { #listenall { top: 185px; left: 280px; font-size: 25px; } }
            @media only screen and (max-width: 1000px) { #listenall { top: 150px; left: 230px; font-size: 22px; } }
            @media only screen and (max-width: 640px) { #listenall { top: 170px; left: 117px; line-height: 25px; font-size: 20px; width: 180px; } }

            #learnmore {
              background: #fae823;
              color: #1D314D;
              padding: 12px 18px;
              position: absolute;
              left: 300px;
              top: 270px;
              font-weight: bold;
              font-size: 20px;
              height: 50px;
            }
            @media only screen and (max-width: 1100px) { #learnmore { top: 250px; left: 280px; } }
            @media only screen and (max-width: 1000px) { #learnmore { top: 200px; left: 230px; } }
            @media only screen and (max-width: 640px) { #learnmore {
              top: 380px;
              left: 50%;
              line-height: 45px;
              width: 200px;
              margin-left: -100px;
              text-align: center;
              padding-top: 3px;
              padding-left: 0;
              padding-right: 0;
            } }

            #learnmore a {
              color: inherit;
            }

            #summerpreview {
              background: #f89320;
              width: 250px;
              height: 50px;
              position: absolute;
              top: 270px;
              left: 460px;
              font-weight: bold;
              color: #1D314D;
              padding: 12px 0 0 18px;
              font-size: 20px;
              cursor: pointer;
            }
            @media only screen and (max-width: 1100px) { #summerpreview { top: 250px; left: 430px; } }
            @media only screen and (max-width: 1000px) { #summerpreview { top: 200px; left: 380px; } }
            @media only screen and (max-width: 640px) { #summerpreview {
              top: 300px;
              left: 50%;
              line-height: 45px;
              width: 200px;
              margin-left: -100px;
              text-align: center;
              padding-top: 3px;
              padding-left: 0;
              padding-right: 0;
            } }

            #summerpreview-audio-wrap {
              display: none;
            }
          </style>
          <div id="summer-home-block">
            <img src="/assets/summer/cloud.png" id="cloud1">
            <img src="/assets/summer/cloud.png" id="cloud2">
            <img src="/assets/summer/cloud.png" id="cloud3">

            <img src="/assets/summer/hp-sun.png" id="sun" alt="Summer 2018">
            <img src="/assets/summer/hp-plane.png?v=2" id="plane" alt="Escape to Radiotopia">

            <div id="threeshows">Three new shows</div>
            <div id="listenall">Listen all summer long</div>

            <div id="learnmore"><a href="/summer">Learn More</a></div>

            <div id="summerpreview">▶ Hear a Preview</div>
            <div id="summerpreview-audio-wrap">
              <audio src="https://media.radiotopia.fm/promos/Summer_of_Radiotopia-Trailer-Generic.mp3" id="summerpreview-audio"></audio>
            </div>
            <script>
              (function () {
                var btn = document.getElementById('summerpreview');
                var ply = document.getElementById('summerpreview-audio');
                btn.addEventListener('click', function (ev) {
                  if (ply.paused) {
                    ply.play();
                    btn.innerText = 'Pause Preview';
                  } else {
                    ply.pause();
                    btn.innerText = '▶ Hear a Preview';
                  }
                })
              })();
            </script>
          </div>

          {.if item}
            {.section item}
              {.if productType}
              {.or}
                {.if startDate}
                  {.main-image?}
                    <div class="banner-thumbnail-wrapper" data-content-field="main-image">
                      <div class="color-overlay"></div>
                      <figure id="thumbnail" class="loading content-fill"><img {@|image-meta} /></figure>
                    </div>
                  {.end}
                {.or}
                  {.main-image?}
                    <div class="banner-thumbnail-wrapper" data-content-field="main-image">
                      <div class="color-overlay"></div>
                      <figure id="thumbnail" class="loading content-fill"><img {@|image-meta} /></figure>
                      <div class="blog-item-wrapper">
                        <div class="title-desc-wrapper">
                          <time class="dt-published published post-date" datetime="{addedOn|date %F}" pubdate>{addedOn|date %B %e, %Y}</time>
                          <div class="post-category">{.section categories}{.repeated section @}<a href="{collection.fullUrl}?category={@|url-encode}">{@}</a>{.alternates with}, {.end}{.end}</div>
                          <div class="post-author"><a href="{collection.fullUrl}?author={author.id}">{.section author}{displayName}{.end}</a></div>
                          {.section title}<div class="post-title">{@}</div>{.end}
                        </div>
                      </div>
                    </div>
                  {.end}
                {.end}
              {.end}
            {.end}
          {.or}
            {.section collection}
              {.collectionTypeNameEquals? gallery}
              {.or}
                {.collectionTypeNameEquals? index}
                {.or}
                  {.collectionTypeNameEquals? page}
                    <div id="promotedGalleryWrapper" class="sqs-layout promoted-gallery-wrapper"><div class="row"><div class="col"></div></div></div>
                    {.background-source-video?}
                        <div class="banner-thumbnail-wrapper{.if description} has-description{.end}" data-content-field="main-image" data-collection-id="{collection.id}" data-edit-main-image="Banner" data-annotation-alignment="bottom left">
                          <div class="color-overlay"></div>
                          <figure id="thumbnail" class="loading content-fill">
                            {@|apply sqs-video-background.block}
                          </figure>
                          {.if description}<div class="desc-wrapper" data-collection-id="{id}">{description}</div>{.end}
                        </div>
                    {.or}
                      {.main-image?}
                        <div class="banner-thumbnail-wrapper{.if description} has-description{.end}" data-content-field="main-image" data-collection-id="{collection.id}" data-edit-main-image="Banner" data-annotation-alignment="bottom left">
                          {.section mainImage}
                          <div class="color-overlay"></div>
                          <figure id="thumbnail" class="loading content-fill">
                            <img {@|image-meta} />
                          </figure>
                          {.end}
                          {.if description}<div class="desc-wrapper" data-collection-id="{id}">{description}</div>{.end}
                        </div>
                      {.end}
                    {.end}
                  {.or}
                    {.collectionTypeNameEquals? blog}
                      <squarespace:query collection="{collection.urlId}" featured="true" limit="5">
                      {.section items}
                        <div class="sqs-featured-posts-gallery">

                          <div class="gallery-wrapper">

                            <!--FULL SIZE IMAGES-->

                            <div class="slides-controls">
                              <div class="posts">
                                {.repeated section @}

                                  <!--SLIDE-->

                                  <div class="post{.main-image?}{.or} no-main-image{.end} content-fill" data-slide-id="{id}">

                                    <div class="title-desc-wrapper">
                                      <time class="dt-published published post-date" datetime="{addedOn|date %F}" pubdate>{addedOn|date %B %e, %Y}</time>
                                      <div class="post-category">{.section categories}{.repeated section @}{@}{.alternates with}, {.end}{.end}</div>
                                      <div class="post-author">{.section author}{displayName}{.end}</div>
                                      {.section title}<div class="post-title"><a href="{fullUrl}">{@|truncate 48}</a></div>{.end}
                                      {.excerpt?}<div class="post-excerpt">{excerpt}</div>{.end}
                                      <a href="{fullUrl}" class="view-post"></a>
                                    </div>

                                    <div class="color-overlay"></div>

                                    {.main-image?}
                                      <img data-load="viewport" {@|image-meta}>
                                    {.end}
                                  </div>

                                {.end}
                              </div>

                              {.section 1}
                                <!--PREVIOUS/NEXT CONTROLS-->
                                <span class="arrow previous-slide"></span>
                                <span class="arrow next-slide"></span>
                              {.end}

                              <!--CIRCLES-->
                              <div class="circles gallery-nav">
                                {.repeated section @}
                                  <span class="circle"></span>
                                {.end}
                              </div>
                            </div>
                          </div>

                        </div>
                      {.or}
                        {.section collection}

                          {.background-source-video?}
                            <div class="banner-thumbnail-wrapper{.if description} has-description{.end}" data-content-field="main-image">
                              <div class="color-overlay"></div>
                              <figure id="thumbnail" class="loading content-fill">
                                {@|apply sqs-video-background.block}
                              </figure>
                              {.if description}<div class="desc-wrapper" data-content-field="description">{description}</div>{.end}
                            </div>
                          {.or}
                            {.section mainImage}
                              <div class="banner-thumbnail-wrapper{.if description} has-description{.end}" data-content-field="main-image">
                                <div class="color-overlay"></div>
                                <figure id="thumbnail" class="loading content-fill">
                                  <img {@|image-meta} />
                                </figure>
                                {.if description}<div class="desc-wrapper" data-content-field="description">{description}</div>{.end}
                              </div>
                            {.end}
                          {.end}

                        {.end}
                      {.end}
                      </squarespace:query>
                    {.or}

                      {.background-source-video?}
                        <div class="banner-thumbnail-wrapper{.if description} has-description{.end}" data-content-field="main-image">
                          <div class="color-overlay"></div>
                          <figure id="thumbnail" class="loading content-fill">
                            {@|apply sqs-video-background.block}
                          </figure>
                          {.if description}<div class="desc-wrapper" data-content-field="description">{description}</div>{.end}
                        </div>
                      {.or}
                        {.section mainImage}
                          <div class="banner-thumbnail-wrapper{.if description} has-description{.end}" data-content-field="main-image">
                            <div class="color-overlay"></div>
                            <figure id="thumbnail" class="loading content-fill">
                              <img {@|image-meta} />
                            </figure>
                            {.if description}<div class="desc-wrapper" data-content-field="description">{description}</div>{.end}
                          </div>
                        {.end}
                      {.end}

                    {.end}
                  {.end}
                {.end}
              {.end}
            {.end}
          {.end}


          {.section categoryFilter}
          <p class="filter-heading filter-by-category">
            <a href="{collection.fullUrl}"><span>{@|safe}</span></a>
          </p>
          {.end}
          {.section tagFilter}
          <p class="filter-heading filter-by-tag">
            <a href="{collection.fullUrl}"><span>{@|safe}</span></a>
          </p>
          {.end}
          {.if authorFilter}
          <p class="filter-heading filter-by-author">
            <a href="{collection.fullUrl}"><span>{author.displayName}</span></a>
          </p>
          {.end}

          {.section collection}
          {.collectionTypeNameEquals? products}{.section categories}<div id="categoryNav">
            <input type="checkbox" name="category-nav-toggle" id="categoryNavToggle" class="category-nav-toggle hidden" />
            <label for="categoryNavToggle" class="category-nav-toggle-label" onclick></label>
            <nav class="category-nav">
              <ul class="category-nav-links">
                <li class="nav-section-label">{navigationTitle}</li>
                <li class="filter"><a>Filter{.if categoryFilter}: {categoryFilter}{.end}</a></li>
                <li{.if categoryFilter}{.or} class="active-link all"{.end}><a href="{fullUrl}">All</a></li>
                {.repeated section @}
                <li{.equal? categoryFilter @} class="active-link"{.end}><a href="{fullUrl}?category={@|url-encode}">{@}</a></li>
                {.end}
              </ul>
            </nav>
          </div>{.end}{.end}<!-- comment the linebreak between these two elements because science
          -->{.collectionTypeNameEquals? page}<!-- comment the linebreak between these two elements because science
          --><squarespace:folder-navigation template="folder-navigation" />{.end}{.end}<!-- comment the linebreak between these two elements because science
          -->{.section collection}{.collectionTypeNameEquals? blog}<aside id="rightSidebar" role="complementary">
            <squarespace:block-field class="open-block-field" id="blogBlocks-{id}" columns="12" label="Blog Sidebar Content" />
          </aside>
          {.end}
          {.end}

          <div class="podcast-art-grid-wrapper">
            <squarespace:query collection="podcasts" template="podcast" columns="12" limit="30" />
          </div>

          <squarespace:query collection="testimonial" template="testimonial" columns="12" />

          <squarespace:block-field id="news-and-events-header" class="section-headline" columns="12" label="News and Events Header" />
          <div class="news-and-events-container" id="news-and-events-container">
            <div class="left-column">
              <squarespace:query collection="news" limit="1" template="news" columns="12" />
            </div>
            <div class="right-column">
              <squarespace:query collection="news" limit="1" skip="1" template="news" columns="12" />
              <squarespace:query collection="events" limit="1" template="event" columns="12" />
            </div>
          </div>
        </div>

        <div class="support-container" id="support-container">
          {@|apply parallax.block}
          <div class="inner">
            <div class="support-left-column" id="make-a-donation" name="make-a-donation">
              <squarespace:block-field class="support-radiotopia" id="support-radiotopia" columns="12" label="Support Radiotopia" />
              <a href="#" data-behavior="open-modal" data-target="donate" data-source="body">Donate Now</a>
            </div>

            <div class="support-right-column">
              <squarespace:block-field class="sponsor-radiotopia" id="sponsor-radiotopia" columns="12" label="Become a Sponsor" />
            </div>
          </div>
        </div>

    		<div class="sponsor-logos">
          <squarespace:block-field class="sponsor-logos" id="sponsor-logos" columns="12" label="Sponsor Logos" />
          <squarespace:block-field class="sponsorship-button" id="sponsorship-button" columns="12" label="Sponsorship Button Block" />
        </div>
      </main>

      <div id="preFooter">
        <div class="pre-footer-inner">
          <squarespace:block-field id="preFooterBlocks" columns="12" label="Pre-Footer Content" />
        </div>
      </div>

      {@|apply footer.block}
    </div>
    <squarespace:script src="site-bundle.js" combo="false" />
    {squarespace-footers}

    {@|apply footer-javascript.block}
    <squarespace:script src="homepage.js" combo="false" />

    <script type="text/javascript">
      $(document).ready(function(){
        $('.testimonials').slick({
          responsive: [{
            breakpoint: 640,
            settings: {
              arrows: false
            }
          }]
        });
        Radiotopia.initialize();
        RadiotopiaHome.initialize();
      });
    </script>

    <script>
      (function () {
        var logo = document.querySelector('#logoImage img');
        logo.src = '/assets/summer/Radiotopia-Zag-Full-Blue.png';
      })();
    </script>
  </body>
</html>
