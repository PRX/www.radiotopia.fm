<!doctype html>
<html class="touch-styles prx-v1">
  <head>
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    {.if template.mobileStylesEnabled}
    <meta name="viewport" content="width=device-width, initial-scale=1">
    {.end}
    {squarespace-headers}
    <script>/* Must be below squarespace-headers */(function(){var e='ontouchstart'in window||navigator.msMaxTouchPoints;var t=document.documentElement;if(!e&&t){t.className=t.className.replace(/touch-styles/,'')}})()
    </script>
    <!-- Begin MailChimp Signup Form -->
    <link href="//cdn-images.mailchimp.com/embedcode/classic-10_7.css" rel="stylesheet" type="text/css">
    <style type="text/css">
      #mc_embed_signup{background:#1c304c; clear:left; font:14px Helvetica,Arial,sans-serif; }
      /* Add your own MailChimp form style overrides in your site stylesheet or in this style block.
         We recommend moving this block and the preceding CSS link to the HEAD of your HTML file. */
    </style>
  </head>

  <body id="{squarespace.page-id}" class="{squarespace.page-classes}{.if item}{.section item}{.if productType}{.or}{.background-source-video?} has-banner-image item-main-image{.or}{.main-image?} has-banner-image item-main-image{.end}{.end}{.end}{.end}{.or}{.section collection}{.collectionTypeNameEquals? index}{.section collections}{.section 0}{.background-source-video?} has-banner-image index-page{.or}{.main-image?} has-banner-image index-page{.end}{.end}{.end}{.end}{.or}{.background-source-video?} has-banner-image general-page{.or}{.main-image?} has-banner-image general-page{.end}{.end}{.end}{.end}{.end}">
    <input type="checkbox" name="mobile-nav-toggle" id="mobileNavToggle" class="mobile-nav-toggle-box hidden" /><a href="#" class="body-overlay"></a>
    <div class="sqs-announcement-bar-dropzone"></div>
    <div id="sidecarNav">
      <squarespace:navigation navigationId="mainNav" template="mobile-navigation" />
    </div>
    <div id="siteWrapper" class="clearfix about">

      <div class="sqs-cart-dropzone"></div>

      <header id="header" class="show-on-scroll" data-offset-el=".index-section" data-offset-behavior="bottom" role="banner">
        <div class="header-inner">
          {.section website}<div id="{.if logoImageUrl}logoWrapper{.or}siteTitleWrapper{.end}" class="wrapper" data-content-field="site-title">
            {.section logoImageUrl}
              <h1 id="logoImage"><a href="/"><img src="{logoImageUrl}?format=1500w" alt="{siteTitle}" /></a></h1>
            {.or}
              <h1 id="siteTitle" class="site-title"><a href="/">{siteTitle}</a></h1>
            {.end}
          </div>{.end}<!--
          --><div class="mobile-nav-toggle"><div class="top-bar"></div><div class="middle-bar"></div><div class="bottom-bar"></div></div><div class="mobile-nav-toggle fixed-nav-toggle"><div class="top-bar"></div><div class="middle-bar"></div><div class="bottom-bar"></div></div><!--
          --><div id="headerNav"><squarespace:navigation navigationId="mainNav" template="navigation" /></div>
        </div>
      </header>

      {.if item}
        {.section item}
          {.if productType}
          {.or}
            {.if startDate}
              {.main-image?}
                <div class="banner-thumbnail-wrapper" data-content-field="main-image">
                  <div class="color-overlay"></div>
                  <figure id="thumbnail" class="loading"><img {@|image-meta} /></figure>
                </div>
              {.end}
            {.or}
              {.main-image?}
                <div class="banner-thumbnail-wrapper" data-content-field="main-image">
                  <div class="color-overlay"></div>
                  <figure id="thumbnail" class="loading"><img {@|image-meta} /></figure>
                  <div class="blog-item-wrapper">
                    <div class="title-desc-wrapper">
                      <time class="dt-published published post-date" datetime="{addedOn|date %F}" pubdate>{addedOn|date %B %e, %Y}</time>
                      <div class="post-category">{.section categories}{.repeated section @}<a href="{collection.fullUrl}?category={@|url-encode}">{@}</a>{.alternates with}, {.end}{.end}</div>
                      <div class="post-author"><a href="{collection.fullUrl}?author={author.id}">{.section author}{displayName}{.end}</a></div>
                      {.section title}<div class="post-title">{@}</div>{.end}
                    </div>
                  </div>
                </div>
              {.end}
            {.end}
          {.end}
        {.end}
      {.or}
        {.section collection}
          {.collectionTypeNameEquals? gallery}
          {.or}
            {.collectionTypeNameEquals? index}
            {.or}
              {.collectionTypeNameEquals? page}
                <div id="promotedGalleryWrapper" class="sqs-layout promoted-gallery-wrapper"><div class="row"><div class="col"></div></div></div>
                {.background-source-video?}
                    <div class="banner-thumbnail-wrapper{.if description} has-description{.end}" data-content-field="main-image" data-collection-id="{collection.id}" data-edit-main-image="Banner" data-annotation-alignment="bottom left">
                      <div class="color-overlay"></div>
                      <figure id="thumbnail" class="loading content-fill">
                        {@|apply sqs-video-background.block}
                      </figure>
                      {.if description}<div class="desc-wrapper" data-collection-id="{id}">{description}</div>{.end}
                    </div>
                {.or}
                  {.main-image?}
                    <div class="banner-thumbnail-wrapper{.if description} has-description{.end}" data-content-field="main-image" data-collection-id="{collection.id}" data-edit-main-image="Banner" data-annotation-alignment="bottom left">
                      {.section mainImage}
                      <div class="color-overlay"></div>
                      <figure id="thumbnail" class="loading">
                        <img {@|image-meta} />
                      </figure>
                      {.end}
                      {.if description}<div class="desc-wrapper" data-collection-id="{id}">{description}</div>{.end}
                    </div>
                  {.end}
                {.end}
              {.or}
                {.collectionTypeNameEquals? blog}
                  <squarespace:query collection="{collection.urlId}" featured="true" limit="5">
                  {.section items}
                    <div class="sqs-featured-posts-gallery">

                      <div class="gallery-wrapper">

                        <!--FULL SIZE IMAGES-->

                        <div class="slides-controls">
                          <div class="posts">
                            {.repeated section @}

                              <!--SLIDE-->

                              <div class="post{.main-image?}{.or} no-main-image{.end} content-fill" data-slide-id="{id}">

                                <div class="title-desc-wrapper">
                                  <time class="dt-published published post-date" datetime="{addedOn|date %F}" pubdate>{addedOn|date %B %e, %Y}</time>
                                  <div class="post-category">{.section categories}{.repeated section @}{@}{.alternates with}, {.end}{.end}</div>
                                  <div class="post-author">{.section author}{displayName}{.end}</div>
                                  {.section title}<div class="post-title"><a href="{fullUrl}">{@|truncate 48}</a></div>{.end}
                                  {.excerpt?}<div class="post-excerpt">{excerpt}</div>{.end}
                                  <a href="{fullUrl}" class="view-post"></a>
                                </div>

                                <div class="color-overlay"></div>

                                {.main-image?}
                                  <img data-load="viewport" {@|image-meta}>
                                {.end}
                              </div>

                            {.end}
                          </div>

                          {.section 1}
                            <!--PREVIOUS/NEXT CONTROLS-->
                            <span class="arrow previous-slide"></span>
                            <span class="arrow next-slide"></span>
                          {.end}

                          <!--CIRCLES-->
                          <div class="circles gallery-nav">
                            {.repeated section @}
                              <span class="circle"></span>
                            {.end}
                          </div>
                        </div>
                      </div>

                    </div>
                  {.or}
                    {.section collection}

                      {.background-source-video?}
                        <div class="banner-thumbnail-wrapper{.if description} has-description{.end}" data-content-field="main-image">
                          <div class="color-overlay"></div>
                          <figure id="thumbnail" class="loading content-fill">
                            {@|apply sqs-video-background.block}
                          </figure>
                          {.if description}<div class="desc-wrapper" data-content-field="description">{description}</div>{.end}
                        </div>
                      {.or}
                        {.section mainImage}
                          <div class="banner-thumbnail-wrapper{.if description} has-description{.end}" data-content-field="main-image">
                            <div class="color-overlay"></div>
                            <figure id="thumbnail" class="loading">
                              <img {@|image-meta} />
                            </figure>
                            {.if description}<div class="desc-wrapper" data-content-field="description">{description}</div>{.end}
                          </div>
                        {.end}
                      {.end}

                    {.end}
                  {.end}
                  </squarespace:query>
                {.or}

                  {.background-source-video?}
                    <div class="banner-thumbnail-wrapper{.if description} has-description{.end}" data-content-field="main-image">
                      <div class="color-overlay"></div>
                      <figure id="thumbnail" class="loading content-fill">
                        {@|apply sqs-video-background.block}
                      </figure>
                      {.if description}<div class="desc-wrapper" data-content-field="description">{description}</div>{.end}
                    </div>
                  {.or}
                    {.section mainImage}
                      <div class="banner-thumbnail-wrapper{.if description} has-description{.end}" data-content-field="main-image">
                        <div class="color-overlay"></div>
                        <figure id="thumbnail" class="loading">
                          <img {@|image-meta} />
                        </figure>
                        {.if description}<div class="desc-wrapper" data-content-field="description">{description}</div>{.end}
                      </div>
                    {.end}
                  {.end}

                {.end}
              {.end}
            {.end}
          {.end}
        {.end}
      {.end}

      {.section categoryFilter}
      <p class="filter-heading filter-by-category">
        <a href="{collection.fullUrl}"><span>{@|safe}</span></a>
      </p>
      {.end}
      {.section tagFilter}
      <p class="filter-heading filter-by-tag">
        <a href="{collection.fullUrl}"><span>{@|safe}</span></a>
      </p>
      {.end}
      {.if authorFilter}
      <p class="filter-heading filter-by-author">
        <a href="{collection.fullUrl}"><span>{author.displayName}</span></a>
      </p>
      {.end}

      <main id="page" role="main">
        <div class="inner">
          <div class="about-content">
            <div class="intro">
              <squarespace:block-field id="about-logo" class="about-logo" label="About Logo" />
              <squarespace:block-field id="about-description" class="about-description" label="About Description" />
            </div>
            <div class="intro-footer">
              <squarespace:block-field id="intro-social-icons" class="intro-social-icons" label="Intro Social Icons" />
              <squarespace:block-field id="intro-media-kit" class="intro-media-kit" label="Media Kit" />
            </div>
            <div class="our-team">
              <squarespace:block-field id="our-team-section-title" class="section-title" label="Our Team Title" />
              <ul>
                <li class="item">
                  <squarespace:block-field id="our-team-image-one" class="image one" label="Our Team Image One" />
                  <squarespace:block-field id="our-team-caption-one" class="caption one" label="Our Team Caption One" />
                </li>
                <li class="item">
                  <squarespace:block-field id="our-team-image-two" class="image two" label="Our Team Image Two" />
                  <squarespace:block-field id="our-team-caption-two" class="caption two" label="Our Team Caption Two" />
                </li>
                <li class="item">
                  <squarespace:block-field id="our-team-image-five" class="image five" label="Our Team Image Five" />
                  <squarespace:block-field id="our-team-caption-five" class="caption five" label="Our Team Caption Five" />
                </li>
                <li class="item">
                  <squarespace:block-field id="our-team-image-three" class="image three" label="Our Team Image Three" />
                  <squarespace:block-field id="our-team-caption-three" class="caption three" label="Our Team Caption Three" />
                </li>
                <li class="item">
                  <squarespace:block-field id="our-team-image-four" class="image four" label="Our Team Image Four" />
                  <squarespace:block-field id="our-team-caption-four" class="caption four" label="Our Team Caption Four" />
                </li>
                <li class="item">
                  <squarespace:block-field id="our-team-image-six" class="image six" label="Our Team Image six" />
                  <squarespace:block-field id="our-team-caption-six" class="caption six" label="Our Team Caption six" />
                </li>
                <li class="item">
                  <squarespace:block-field id="our-team-image-seven" class="image seven" label="Our Team Image seven" />
                  <squarespace:block-field id="our-team-caption-seven" class="caption seven" label="Our Team Caption seven" />
                </li>
                <li class="item">
                  <squarespace:block-field id="our-team-image-eight" class="image eight" label="Our Team Image eight" />
                  <squarespace:block-field id="our-team-caption-eight" class="caption eight" label="Our Team Caption eight" />
                </li>
                <li class="item">
                  <squarespace:block-field id="our-team-image-nine" class="image nine" label="Our Team Image nine" />
                  <squarespace:block-field id="our-team-caption-nine" class="caption nine" label="Our Team Caption nine" />
                </li>
                <li class="item">
                  <squarespace:block-field id="our-team-image-ten" class="image ten" label="Our Team Image ten" />
                  <squarespace:block-field id="our-team-caption-ten" class="caption ten" label="Our Team Caption ten" />
                </li>
                <li class="item">
                  <squarespace:block-field id="our-team-image-eleven" class="image eleven" label="Our Team Image eleven" />
                  <squarespace:block-field id="our-team-caption-eleven" class="caption eleven" label="Our Team Caption eleven" />
                </li>
                <li class="item">
                  <squarespace:block-field id="our-team-image-twelve" class="image twelve" label="Our Team Image twelve" />
                  <squarespace:block-field id="our-team-caption-twelve" class="caption twelve" label="Our Team Caption twelve" />
                </li>
              </ul>
            </div>
            <div class="listen-apps">
              <squarespace:block-field id="listen-apps-section-title" class="section-title" label="Listen to Radiotopia Title" />
              <div class="app-wrapper">
                <squarespace:block-field id="app-content" class="app-content" columns="12" label="Apps" />
              </div>
            </div>

            <div class="support-container" id="support-container">
              <div class="inner">
                <div class="support-left-column">
                  <squarespace:block-field class="support-radiotopia" id="about-support-radiotopia" columns="12" label="Support Radiotopia" />
                  <a href="https://give.prx.org/radiotopia">Donate Now</a>
                </div>

                <div class="support-right-column">
                  <squarespace:block-field class="sponsor-radiotopia" id="about-sponsor-radiotopia" columns="12" label="Become a Sponsor" />
                </div>
              </div>
            </div>

            <div class="mailing-list-signup">
              <squarespace:block-field class="mailing-list" id="about-mailing-list" columns="12" label="Mailing List Signup" />
            </div>

            <div class="faq-container">
              <squarespace:block-field class="faq" id="about-faq" columns="12" label="FAQ" />
            </div>

          </div>
        </div>
      </main>

      <div id="preFooter">
        <div class="pre-footer-inner">
          <squarespace:block-field id="preFooterBlocks" columns="12" label="Pre-Footer Content" />
        </div>
      </div>

      {@|apply footer.block}
    </div>

    <squarespace:script src="site-bundle.js" combo="false" />
    {squarespace-footers}

    {@|apply footer-javascript.block}
    <squarespace:script src="news.js" combo="false" />

    <script type="text/javascript">
      $(document).ready(function(){
        Radiotopia.initialize();
        RadiotopiaNews.initialize();
      });
    </script>
  </body>
</html>
