<style>
  #siteWrapper .banner-thumbnail-wrapper {
    display: none;
  }
</style>

{.section item}
  <section id=prx-podcast-banner>
    <style>
      #prx-podcast-banner {
        background-image: url('{customContent.podcastBannerArtwork.assetUrl}');
        background-position: top center;
        background-size: cover;
        height: 500px;
        margin-left: 50%;
        position: relative;
        transform: translateX(-50%);
        width: 100vw;
      }

      #prx-podcast-banner ul {
        align-content: flex-end;
        align-items: flex-end;
        border: 0;
        display: flex;
        flex-direction: row;
        flex-wrap: wrap;
        height: 100%;
        gap: 12px;
        justify-content: end;
        list-style: none;
        margin: 0;
        padding: 0 50px 30px 0;
      }

      #prx-podcast-banner ul li a {
        height: 38px;
        display: block;
        overflow: hidden;
        width: 38px;
      }

      #prx-podcast-banner ul li a img {
        display: block;
        width: 100%;
      }

      @media screen and (max-width: 640px) {
        #prx-podcast-banner ul {
          padding: 0 15px 10px 0;
        }
      }
    </style>

    <ul>
      {.if customContent.podcastInstagramUrl}<li><a href="#"><img src="/assets/social/instagram.svg"></a></li>{.end}
      {.if customContent.podcastFacebookUrl}<li><a href="#"><img src="/assets/social/facebook.svg"></a></li>{.end}
      {.if customContent.podcastTwitterUrl}<li><a href="#"><img src="/assets/social/twitter.svg"></a></li>{.end}
      {.if customContent.podcastMastodonUrl}<li><a href="#"><img src="/assets/social/mastodon.svg"></a></li>{.end}
      {.if customContent.podcastNewsletterUrl}<li><a href="#"><img src="/assets/social/email.svg"></a></li>{.end}
    </ul>
  </section>

  <section id=prx-podcast-intro>
    <style>
      /* Busts out of the default Squarespace center column, for full bleed bg */
      #prx-podcast-intro {
        background-image: linear-gradient(0deg, rgba(255,255,255,1) 0%, rgba(255,255,255,0.88) 100%), url('/assets/zag-pattern.svg');
        background-size: 100%, 300%;
        background-position: top center, top center;
        margin: 0 auto;
        margin-left: 50%;
        padding: 50px 0 30px;
        transform: translateX(-50%);
        width: 100vw;
      }

      #prx-podcast-intro > div {
        box-sizing: border-box;
        margin: 0 auto;
        max-width: 500px;
        padding: 0 32px;
      }

      #prx-podcast-intro h1 {
        color: #ff446a;
        font-size: 40px;
        font-weight: 600;
        margin-bottom: 4px;
      }

      #prx-podcast-intro h1 + a {
        font-size: 20px;
        font-weight: 600;
      }
      #prx-podcast-intro h1 + a:hover { color: #8087af; }

      #prx-podcast-intro .description {
        margin-bottom: 30px;
      }

      #prx-podcast-intro .description p {
        font-size: 22px;
        font-weight: 500;
      }

      .boltline {
        display: block;
        margin: 0 auto;
        max-width: 480px;
        width: 100%;
      }

      @media screen and (max-width: 768px) {
        #prx-platform-links {
          gap: 12px;
        }

        #prx-platform-links li a {
          height: 36px;
          width: 36px;
        }

        #prx-podcast-intro .description p {
          font-size: 18px;
        }
      }

      @media screen and (max-width: 768px) {
        #prx-podcast-intro {
          background-size: 600%;
        }
      }

      @media screen and (max-width: 640px) {
        #prx-podcast-intro .description p {
          font-size: 16px;
        }
      }
    </style>

    <div>
      <h1>{customContent.podcastTitle}</h1>
      <a href="{customContent.podcastLink}">{customContent.podcastUrlTitle}</a>

      <ul id=prx-platform-links>
        <style>
          #prx-platform-links {
          border: 0;
          display: flex;
          flex-wrap: wrap;
          gap: 6px;
          justify-content: left;
          list-style: none;
          margin: 30px 0 20px;
          padding: 0;
        }

        #prx-platform-links li a {
          display: block;
          margin: 0;
        }

        #prx-platform-links li a img {
          --size: 23px;

          display: block;
          height: var(--size);
          width: var(--size);
        }
        </style>

        {.if customContent.podcastItunesUrl}<li><a href="{customContent.podcastItunesUrl}"><img src="/assets/platforms/apple.svg"></a></li>{.end}
        {.if customContent.podcastSpotifyUrl}<li><a href="{customContent.podcastSpotifyUrl}"><img src="/assets/platforms/spotify.svg"></a></li>{.end}
        {.if customContent.podcastOvercastUrl}<li><a href="{customContent.podcastOvercastUrl}"><img src="/assets/platforms/overcast.svg"></a></li>{.end}
        {.if customContent.podcastCastboxUrl}<li><a href="{customContent.podcastCastboxUrl}"><img src="/assets/platforms/castbox.svg"></a></li>{.end}
        {.if customContent.podcastPocketCastsUrl}<li><a href="{customContent.podcastPocketCastsUrl}"><img src="/assets/platforms/pocket-casts.svg"></a></li>{.end}
        {.if customContent.podcastStitcherUrl}<li><a href="{customContent.podcastStitcherUrl}"><img src="/assets/platforms/stitcher.svg"></a></li>{.end}
        {.if customContent.podcastPandoraUrl}<li><a href="{customContent.podcastPandoraUrl}"><img src="/assets/platforms/pandora.svg"></a></li>{.end}
        {.if customContent.podcastGooglePlayUrl}<li><a href="{customContent.podcastGooglePlayUrl}"><img src="/assets/platforms/google.png"></a></li>{.end}
        {.if customContent.podcastAmazonMusicUrl}<li><a href="{customContent.podcastAmazonMusicUrl}"><img src="/assets/platforms/amazon.svg"></a></li>{.end}
        {.if customContent.podcastFeedUrl}<li><a href="{customContent.podcastFeedUrl}"><img src="/assets/platforms/rss.svg"></a></li>{.end}
      </ul>

      <div class=description>{customContent.podcastDescription.html}</div>

      <img class=boltline src=/assets/boltline.svg>

      <div id=prx-trailer-player>
        <style>
          #prx-trailer-player {
            cursor: pointer;
            display: flex;
            flex-direction: row;
            flex-wrap: nowrap;
            gap: 20px;
            justify-content: center;
            margin: 30px auto 0;
          }

          #prx-trailer-player img {
            display: block;
            width: 65px;
          }
          #prx-trailer-player:hover img {
            filter: brightness(0) saturate(100%) invert(43%) sepia(54%) saturate(5140%) hue-rotate(326deg) brightness(109%) contrast(101%);
          }

          #prx-trailer-player h4 {
            font-size: 32px;
            font-weight: 600;
            letter-spacing: 2px;
          }
          #prx-trailer-player:hover h4 { color: #ff446a; }

          #prx-trailer-player > audio {
            display: none;
          }

          @media screen and (max-width: 480px) {
            #prx-trailer-player { gap: 10px; }
            #prx-trailer-player img { width: 38px; }
            #prx-trailer-player h4 { font-size: 23px; }
          }

          .prx-podcast-trailer-meta {
            display: none;
          }
          .sqs-edit-mode .prx-podcast-trailer-meta {
            display: block;
          }
        </style>

        <script>
          (function () {
            document.addEventListener("DOMContentLoaded", _ => {
              const meta = document.querySelector('.prx-podcast-trailer-meta .sqs-audio-embed');

              const trailerAudio = document.querySelector('#prx-trailer-player audio');
              trailerAudio.setAttribute('src', meta.getAttribute('data-url'));

              const trailerControl = document.querySelector('#prx-trailer-player');
              const trailerControlIndicator = document.querySelector('#prx-trailer-player img');

              trailerControl.addEventListener('click', e => {
                if (trailerAudio.paused) {
                  trailerAudio.play();
                  trailerControlIndicator.src = '/assets/pause.svg';
                } else {
                  trailerControlIndicator.src = '/assets/play.svg';
                  trailerAudio.pause();
                }
              });
            });
          })();
        </script>

        <img src=/assets/play.svg>
        <h4>listen to the trailer</h4>

        <!-- The file loaded into this player is extracted from the first
        `.sqs-audio-embed` found within `.prx-podcast-trailer-meta`. The URL
        is contained in the `data-url` attribute -->
        <audio controls="" preload="none"></audio>
      </div>

      <!-- Ths block field is only visible in the Squarespace -->
      <squarespace:block-field id="prx-podcast-{id}-trailer-meta" class="prx-podcast-trailer-meta" columns="12" label="Audio Trailer Helper" />
    </div>
  </section>

  <section id=prx-podcast-starter>
    <style>
      #prx-podcast-starter {
        background: #092c58;
        color: white;
        margin-bottom: 125px;
        margin-left: 50%;
        margin-top: 125px;
        padding: 50px 0 30px;
        transform: translateX(-50%);
        width: 100vw;
      }

      /* Make internal wrapper follow the default Squarespace center column layout */
      #prx-podcast-starter > div {
        box-sizing: border-box;
        width: auto;
        margin: auto;
        max-width: 1020px;
        padding: 40px 32px;
      }

      #prx-podcast-starter .sqs-row h1 {
        color: white;
        font-size: 100px;
        font-weight: 600;
      }

      @media screen and (max-width: 768px) {
        #prx-podcast-starter {
          margin-bottom: 60px;
          margin-top: 10px;
        }

        #prx-podcast-starter .sqs-row h1 {
          font-size: 50px;
        }
      }
    </style>
    <!-- WHERE TO START -->

    <squarespace:block-field id="shared-podcast-starter" columns="12" label="Shared Starter" />
  </section>

  <section id=prx-podcast-hosts>
    <style>
      #prx-podcast-hosts {
        margin: 0 auto;
        max-width: 650px;
      }
    </style>

    <div>{customContent.podcastMeetTheHosts.html}</div>
  </section>

  <section id=prx-podcast-cta>
    <style>
      #prx-podcast-cta {
        display: flex;
        gap: 75px;
        flex-direction: row;
        flex-wrap: wrap;
        justify-content: center;
        margin: 125px auto;
        width: 100%;
      }

      /* Each CTA */
      #prx-podcast-cta > div {
        max-width: 320px;
      }

      /* CTA buttons */
      #prx-podcast-cta > div > a {
        background: #ff446a;
        border: 1px solid #ff446a;
        border-radius: 999px;
        color: white;
        display: block;
        margin: 0 auto 15px;
        padding: 10px 20px;
        text-align: center;
        width: fit-content;
        transition: all 0.1s ease-out
      }
      #prx-podcast-cta > div > a:hover { background: white; color: #ff446a; }

      /* Paragraphs within the Squarespace CMS block field */
      #prx-podcast-cta > div div.sqs-row p {
        font-size: 18px;
      }
    </style>

    <div>
      <a href="#">Support {customContent.podcastTitle}</a>
      <squarespace:block-field id="shared-podcast-support-copy" columns="12" label="Shared Support Copy" />
    </div>

    <div>
      <a href="#">Become a Sponsor</a>
      <squarespace:block-field id="shared-podcast-sponsor-copy" columns="12" label="Shared Sponsor Copy" />
    </div>
  </section>

  <section id=prx-podcast-carousel>
    <style>
      /* Busts out of the default Squarespace center column, for full bleed bg */
      #prx-podcast-carousel {
        background-color: #F6F6F6;
        margin-left: 50%;
        transform: translateX(-50%);
        width: 100vw;
      }

      /* Make internal wrapper follow the default Squarespace center column layout */
      #prx-podcast-carousel > div {
        box-sizing: border-box;
        width: auto;
        margin: auto;
        max-width: 1020px;
        padding: 40px 32px;
      }

      #prx-podcast-carousel .sqs-row h1,
      #prx-podcast-carousel .sqs-row h1 strong {
        font-weight: 700;
      }

      #prx-podcast-carousel a.sqs-block-button-element {
        background: #092c58;
        border: 1px solid #092c58;
        border-radius: 999px;
        font-weight: 600;
        letter-spacing: 1.5px;
        padding: 8px 30px;
        text-transform: initial;
        transition: all 0.1s ease-out
      }
      #prx-podcast-carousel a.sqs-block-button-element:hover { background: white; color: #092c58; opacity: 1; }
    </style>

    <div>
      <squarespace:block-field id="shared-podcast-carousel" columns="12" label="Shared Carousel" />
    </div>
  </section>
{.end}
