{.section item}

  <!--WRAPPER-->

  <article id="post-{id}" class="{@|item-classes}" data-item-id="{id}">

    <!--POST TILE-->



    <!--MAIN CONTENT-->
    <section>

    <div class="banner-image-container" id="test">
      <img src="{customContent.bannerImage.assetUrl}">
    </div>

      <div class="background-wrapper">
        <div class="podcast-wrapper">
          <div class="header-container">
            <div class="podcast-column podcast-left-column">
              <div class="podcast-artwork">
                <img src="{customContent.showArt.assetUrl}">
              </div>
              <div class="trailer-button">
                <a href="#"><img src="/assets/play-trailer-button.png"></a>
              </div>
            </div>

            <div class="podcast-column podcast-center-column">
              <h1 class="title" data-content-field="title">
                <p>{customContent.podcastTitle}</p>
              </h1>
              <div class="podcast-link-container">
                <a href="http://{customContent.podcastLink}">Listen at {customContent.podcastLink}</a>
              </div>
              <div class="podcast-description">
                {customContent.podcastDescription.html}
              </div>
            </div>

            <div class="podcast-column podcast-right-column">
              <div class="podcast-subscribe">
                <p class="podcast-listen">Listen</p>
                <!-- change href to link to itunes podcast url -->
                <a href="#" class="podcast-subscribe-button">Subscribe</a>
              </div>
              <div class="social-buttons">
                <p class="podcast-connect">Connect</p>
                <!-- Change hrefs to respective social media urls -->
                <div class="facebook-button">
                  <a href="#"><img src="/assets/facebook.png"></a>
                </div>
                <div class="twitter-button">
                  <a href="#"><img src="/assets/twitter.png"></a>
                </div>
                <div class="instagram-button">
                  <a href="#"><img src="/assets/instagram.png"></a>
                </div>
              </div>
            </div>
          </div>

          <div class="podcast-starter-episodes-container">
            <squarespace:block-field class="podcast-starter-episodes-header" id="podcast-starter-episodes-header" columns="12" label="Starter Episodes Header" />
            <squarespace:block-field class="podcast-starter-episodes" id="podcast-starter-episodes" columns="12" label="Starter Episodes" />
          </div>

          <div class="hosts-container">
            <img src="{customContent.hostsImage.assetUrl}" class="hosts-image">
            <div class="hosts-content">
              <p class=hosts>{customContent.podcastHosts}</p>
              <p class="hosts-title">{customContent.podcastHostsTitle}</p>
              {customContent.podcastMeetTheHosts.html}
            </div>
          </div>

          <div class="support-container" id="support-container">
            <div class="inner">
              <div class="support-left-column">
                <squarespace:block-field class="support-podcast" id="support-podcast" columns="12" label="Support Podcast" />
              </div>

              <div class="support-right-column">
                <squarespace:block-field class="sponsor-podcast" id="sponsor-podcast" columns="12" label="Become a Sponsor" />
              </div>
            </div>
          </div>

          <div class="sponsor-logos">
            <squarespace:block-field class="podcast-sponsor-logos" id="podcast-sponsor-logos" columns="12" label="Podcast Sponsor Logos" />
          </div>

          <div class="recent-tweets">
            <squarespace:block-field class="recent-tweets" id="recent-tweets" columns="12" label="Recent Tweets" />
          </div>
        </div>
      </div>
    </section>
  </article>

{.end}
