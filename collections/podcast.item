{.section item}

  <!--WRAPPER-->

  <article id="post-{id}" class="{@|item-classes}" data-item-id="{id}">

    <!--POST TILE-->



    <!--MAIN CONTENT-->
    <section>

    <div class="banner-image-container">
      <img src="{customContent.bannerImage.assetUrl}">
    </div>

      <div class="background-wrapper">
        <div class="podcast-wrapper">
          <div class="header-container">
            <div class="podcast-column podcast-left-column">
              <div class="podcast-artwork">
                <img src="{customContent.showArt.assetUrl}">
              </div>
              <div class="trailer-button">
                <squarespace:block-field class="podcast-trailer-player" id="{customContent.podcastUrlTitle}-podcast-trailer-player" columns="12" label="Trailer Player" />
              </div>
            </div>

            <div class="podcast-column podcast-center-column">
              <h1 class="title">
                {customContent.podcastTitle}
              </h1>
              <div class="podcast-link-container">
                <a href="http://{customContent.podcastLink}">Listen at {customContent.podcastLink}</a>
              </div>
              <div class="podcast-description">
                {customContent.podcastDescription.html}
              </div>
            </div>

            <div class="podcast-column podcast-right-column">
              <div class="podcast-subscribe">
                <p class="podcast-listen">Listen</p>
                <a href="#" class="podcast-subscribe-button" data-behavior="open-modal" data-target="subscribe">Subscribe</a>
              </div>
              <div class="social-buttons">
                <p class="podcast-connect">Connect</p>
                {.if customContent.podcastFacebookUrl}
                  <div class="facebook-button icon">
                    <a href="{customContent.podcastFacebookUrl}"><img src="/assets/facebook.png"></a>
                  </div>
                {.end}
                {.if customContent.podcastTwitterUrl}
                  <div class="twitter-button icon">
                    <a href="{customContent.podcastTwitterUrl}"><img src="/assets/twitter.png"></a>
                  </div>
                {.end}
                {.if customContent.podcastInstagramUrl}
                  <div class="instagram-button icon">
                    <a href="{customContent.podcastInstagramUrl}"><img src="/assets/instagram.png"></a>
                  </div>
                {.end}
              </div>
              <div class="extra-metadata">
                <squarespace:block-field class="podcast-extra-metadata" id="{customContent.podcastUrlTitle}-podcast-extra-metadata" columns="1" label="Extra Metadata" />
              </div>
            </div>
          </div>

          <div class="podcast-starter-episodes-container">
            <squarespace:block-field class="podcast-starter-episodes-header" id="{customContent.podcastUrlTitle}-podcast-starter-episodes-header" columns="12" label="Starter Episodes Header" />
            <squarespace:block-field class="podcast-starter-episodes" id="{customContent.podcastUrlTitle}-podcast-starter-episodes" columns="12" label="Starter Episodes" />
          </div>

          <div class="hosts-header" name="podcast-hosts">
            <squarespace:block-field class="{customContent.podcastUrlTitle}-hosts-header-block" id="{customContent.podcastUrlTitle}-hosts-header-block" columns="12" label="Hosts Header" />
          </div>

          <div class="hosts-container" id="podcast-hosts">
            <img src="{customContent.hostsImage.assetUrl}" class="hosts-image">
            <div class="hosts-content">
              <div class="hosts">
                <p>{customContent.podcastHosts}</p>
                <p class="hosts-title">{customContent.podcastHostsTitle}</p>
              </div>
              <div class="hosts-description">{customContent.podcastMeetTheHosts.html}</div>
            </div>
          </div>

          <div class="support-container" id="support-container">
            <div class="inner" id="make-a-donation" name="make-a-donation">
              <div class="support-left-column">
                <div class="support-left-icon">
                  <squarespace:block-field class="support-podcast" id="support-podcast" columns="12" label="Template Support Podcast Icon" />
                </div>
                <squarespace:block-field class="{customContent.podcastUrlTitle}-support-podcast" id="{customContent.podcastUrlTitle}-support-podcast" columns="12" label="Unique Support Podcast Title Block" />
                <squarespace:block-field class="support-podcast-description" id="support-podcast-description" columns="12" label="Template Support Podcast Description" />

                <a href="#" data-behavior="open-modal" data-target="podcast-donate">Donate Now</a>
              </div>

              <div class="support-right-column">
                <squarespace:block-field class="sponsor-podcast" id="sponsor-podcast" columns="12" label="Template Become a Sponsor Block" />
                <div class="row sqs-row" style="padding-top: 14px;">
                  <div class="sqs-block button-block sqs-block-button">
                    <div class="sqs-block-content">
                      <div class="sqs-block-button-container--center" data-alignment="center" data-button-size="medium" id="yui_3_17_2_1_1538079083875_159">
                        <a href="{customContent.podcastSponsorEmail}" class="sqs-block-button-element--medium sqs-block-button-element">Become a Sponsor</a>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <div class="sponsor-logos">
            <squarespace:block-field class="{customContent.podcastUrlTitle}-podcast-sponsor-logos" id="{customContent.podcastUrlTitle}-podcast-sponsor-logos" columns="12" label="Unique Podcast Sponsor Logos" />
          </div>

          <div class="recent-tweets">
            <squarespace:block-field class="{customContent.podcastUrlTitle}-recent-tweets" id="{customContent.podcastUrlTitle}-recent-tweets" columns="12" label="Recent Tweets" />
          </div>
        </div>
      </div>

      <div class="modal-wrapper subscribe">
        <div class="inner">
          <div class="subscribe-modal">
            <div class="close-modal" data-behavior="close-modal"></div>
            <div class="modal-words">
              <div class="subscribe-header">
                <h2>Subscribe To</h2>
              </div>
              <div class="subscribe-body">
                <p>
                  {customContent.podcastTitle}
                </p>
              </div>
            </div>
            {.if customContent.podcastRPUrl}
              <div class="radio-public-button">
                <a href="{customContent.podcastRPUrl}" data-trk-podcast="{customContent.podcastTitle}" data-trk-platform="RadioPublic"><img src="/assets/radio-public-big.png"></a>
              </div>
            {.end}
            <div class="modal-icons">
              {.if customContent.podcastItunesUrl}
                <div class="itunes-button subscribe-icon">
                  <a href="{customContent.podcastItunesUrl}" data-trk-podcast="{customContent.podcastTitle}" data-trk-platform="Apple"><img src="/assets/new-itunes-logo-color.png"></a>
                </div>
              {.end}
              {.if customContent.podcastStitcherUrl}
                <div class="stitcher-button subscribe-icon">
                  <a href="{customContent.podcastStitcherUrl}" data-trk-podcast="{customContent.podcastTitle}" data-trk-platform="Stitcher"><img src="/assets/stitcher-logo-2.png"></a>
                </div>
              {.end}
              {.if customContent.podcastGooglePlayUrl}
                <div class="google-play-button subscribe-icon">
                  <a href="{customContent.podcastGooglePlayUrl}" data-trk-podcast="{customContent.podcastTitle}" data-trk-platform="Google Play"><img src="/assets/google_podcasts_badge@2x.png"></a>
                </div>
              {.end}
            </div>
            <div class="misc-buttons">
              <a href="{customContent.podcastFeedUrl}" data-trk-podcast="{customContent.podcastTitle}" data-trk-platform="RSS">RSS</a>
            </div>
          </div>
        </div>
      </div>
    </section>

    <div class="modal-wrapper podcast-donate">
      <div class="inner">
        <div class="donate-modal">
          <div class="close-modal" data-behavior="close-modal"></div>
          <a class='commitchange-donate' data-embedded data-designation="{customContent.podcastDonateModalDesignation}"></a>
        </div>
      </div>
    </div>
  </article>
{.end}
