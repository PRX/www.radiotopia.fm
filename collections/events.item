<div class="event-item">

  {.section item}
  <div class="event-item-header">
    <div class="cal-icon">
      <p class="event-month">{item.startDate|date %b}</p>
      <p class="event-day">{item.startDate|date %d}</p>
    </div>
    <div class="header-details">
      <time class="event-start">{item.startDate|date %B %e, %l %P}</time>
      <h1 class="event-title">{item.title}</h1>
    </div>
  </div>

  <article class="entry h-entry {@|item-classes}{.main-image?} has-main-image{.end} clear" id="article-{id}" data-item-id="{id}">
    <div class="event-content">
      <div class="event-left-column">
        <div class="entry-content e-content">
          {.section body}
            {@}
          {.end}
        </div>
      </div>

      <div class="event-right-column">
        <div class="event-image-wrapper">
          <img class="event-image" src="{item.assetUrl}">
        </div>
        <div class="when">
          <p class="when-text">When</p>
          {item.startDate|date %A, %B %e, %Y}
          {item.startDate|date %l:%M %P}-{item.endDate|date %l:%M %P}
        </div>

        <div class="where">
          <p class="where-text">Where</p>
          {item.location.addressTitle}
          {item.location.addressLine1}
          {item.location.addressLine2}
        </div>
      </div>
    </div>

    {.if postItemInjectCode}<div class="entry-injection">{postItemInjectCode}</div>{.end}

  </article>

  <div id="comments-{id}" class="p-comment">
    {.comments?}{@|comments}{.end}
  </div>

  {.end}

  {.if pagination}
  <nav class="pagination clear">
    <div class="newer">{.if pagination.prevItem}<span class="prev-label">Earlier Event</span><a href="{pagination.prevItem.fullUrl}" rel="prev"><span>{pagination.prevItem.title}</span></a>{.end}</div><!-- comment the linebreak between these two elements because science
  --><div class="older">{.if pagination.nextItem}<span class="next-label">Later Event</span><a href="{pagination.nextItem.fullUrl}" rel="next"><span>{pagination.nextItem.title}</span></a>{.end}</div>
  </nav>
  {.end}

</div>
