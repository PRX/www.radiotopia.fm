<section class="testimonials">
  {.repeated section items}
    <article class="testimonial-item">
      <div class="testimonial-content">
        <div class="content-body">{customContent.testimonialContent.html}</div>

        <p class="testimonial-author">{customContent.testimonialAuthor}</p>
        <p class="testimonial-twitter-handle">{customContent.testimonialTwitterHandle}</p>
      </div>

      <img class="testimonial-image" src={customContent.testimonialBackgroundImage.assetUrl}/>
    </article>
  {.end}
</section>
