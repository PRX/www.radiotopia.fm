{.section item}

  <!--WRAPPER-->

  <article id="post-{id}" class="{@|item-classes}" data-item-id="{id}">

    <!--POST TILE-->



    <!--MAIN CONTENT-->
    <section>

    <div class="banner-image-container" id="test">
      <img src="{customContent.bannerImage.assetUrl}">
    </div>

      <div class="background-wrapper">
        <div class="podcast-wrapper">
          <div class="header-container">
            <div class="podcast-column podcast-left-column">
              <div class="podcast-artwork">
                <img src="{customContent.showArt.assetUrl}">
              </div>
              <div class="trailer-button">
                <a href="{customContent.podcastTrailerUrl}"><img src="/assets/play-trailer-button.png"></a>
              </div>
            </div>

            <div class="podcast-column podcast-center-column">
              <h1 class="title">
                {customContent.podcastTitle}
              </h1>
              <div class="podcast-link-container">
                <a href="http://{customContent.podcastLink}">Listen at {customContent.podcastLink}</a>
              </div>
              <div class="podcast-description">
                {customContent.podcastDescription.html}
              </div>
            </div>

            <div class="podcast-column podcast-right-column">
              <div class="podcast-subscribe">
                <p class="podcast-listen">Listen</p>
                <a href="#" class="podcast-subscribe-button" data-behavior="open-modal">Subscribe</a>
              </div>
              <div class="social-buttons">
                <p class="podcast-connect">Connect</p>
                {.if customContent.podcastFacebookUrl}
                  <div class="facebook-button icon">
                    <a href="http://{customContent.podcastFacebookUrl}"><img src="/assets/facebook.png"></a>
                  </div>
                {.end}
                {.if customContent.podcastTwitterUrl}
                  <div class="twitter-button icon">
                    <a href="http://{customContent.podcastTwitterUrl}"><img src="/assets/twitter.png"></a>
                  </div>
                {.end}
                {.if customContent.podcastInstagramUrl}
                  <div class="instagram-button icon">
                    <a href="http://{customContent.podcastInstragramUrl}"><img src="/assets/instagram.png"></a>
                  </div>
                {.end}
              </div>
            </div>
          </div>

          <div class="podcast-starter-episodes-container">
            <squarespace:block-field class="podcast-starter-episodes-header" id="podcast-starter-episodes-header" columns="12" label="Starter Episodes Header" />
            <squarespace:block-field class="podcast-starter-episodes" id="{customContent.podcastUrlTitle}-podcast-starter-episodes" columns="12" label="Starter Episodes" />
          </div>

          <div class="hosts-header">
            <squarespace:block-field class="{customContent.podcastUrlTitle}-hosts-header-block" id="{customContent.podcastUrlTitle}-hosts-header-block" columns="12" label="Hosts Header" />
          </div>

          <div class="hosts-container">
            <img src="{customContent.hostsImage.assetUrl}" class="hosts-image">
            <div class="hosts-content">
              <div class="hosts">
                <p>{customContent.podcastHosts}</p>
                <p class="hosts-title">{customContent.podcastHostsTitle}</p>
              </div>
              <div class="hosts-description">{customContent.podcastMeetTheHosts.html}</div>
            </div>
          </div>

          <div class="support-container" id="support-container">
            <div class="inner">
              <div class="support-left-column">
                <squarespace:block-field class="support-podcast" id="support-podcast" columns="12" label="Template Support Podcast Icon" />
                <squarespace:block-field class="{customContent.podcastUrlTitle}-support-podcast" id="{customContent.podcastUrlTitle}-support-podcast" columns="12" label="Unique Support Podcast Title Block" />
                <squarespace:block-field class="support-podcast-description" id="support-podcast-description" columns="12" label="Template Support Podcast Description" />
                <squarespace:block-field class="{customContent.podcastUrlTitle}-donate-button" id="{customContent.podcastUrlTitle}-donate-button" columns="12" label="Unique Donate to Podcast Button" />
              </div>

              <div class="support-right-column">
                <squarespace:block-field class="sponsor-podcast" id="sponsor-podcast" columns="12" label="Template Become a Sponsor Block" />
                <squarespace:block-field class="{customContent.podcastUrlTitle}-sponsor-podcast" id="{customContent.podcastUrlTitle}-sponsor-podcast" columns="12" label="Unique Become a Sponsor Button" />
              </div>
            </div>
          </div>

          <div class="sponsor-logos">
            <squarespace:block-field class="universal-podcast-sponsor-logos" id="universal-podcast-sponsor-logos" columns="12" label="Universal Podcast Sponsor Logos" />
            <squarespace:block-field class="{customContent.podcastUrlTitle}-podcast-sponsor-logos" id="{customContent.podcastUrlTitle}-podcast-sponsor-logos" columns="12" label="Podcast Sponsor Logos" />
          </div>

          <div class="recent-tweets">
            <squarespace:block-field class="{customContent.podcastUrlTitle}-recent-tweets" id="{customContent.podcastUrlTitle}-recent-tweets" columns="12" label="Recent Tweets" />
          </div>
        </div>
      </div>

      <div id="modal-wrapper">
        <div class="inner">
          <div class="subscribe-modal">
            <div class="close-modal" data-behavior="close-modal"></div>
            <div class="modal-words">
              <div class="subscribe-header">
                <h2>Subscribe To</h2>
              </div>
              <div class="subscribe-body">
                <p>{customContent.podcastTitle}</p>
              </div>
            </div>
            <div class="modal-icons">
              {.if customContent.podcastRPUrl}
                <div class="radio-public-button subscribe-icon">
                  <a href="http://{customContent.podcastRPUrl}"><img src="/assets/radio-public.png"></a>
                </div>
              {.end}
              {.if customContent.podcastStitcherUrl}
                <div class="stitcher-button subscribe-icon">
                  <a href="http://{customContent.podcastStitcherUrl}"><img src="/assets/stitcher-logo.png"></a>
                </div>
              {.end}
              {.if customContent.podcastItunesUrl}
                <div class="itunes-button subscribe-icon">
                  <a href="http://{customContent.podcastItunesUrl}"><img src="/assets/itunes-logo.png"></a>
                </div>
              {.end}
              {.if customContent.podcastGooglePlayUrl}
                <div class="google-play-button subscribe-icon">
                  <a href="http://{customContent.podcastGooglePlayUrl}"><img src="/assets/google-play-logo.png"></a>
                </div>
              {.end}
            </div>
          </div>
        </div>
      </div>
    </section>
  </article>

{.end}
