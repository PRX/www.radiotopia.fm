    <script>
      (function () {
        var logo = document.querySelector('#logoImage img');
        logo.src = '/assets/summer/Radiotopia-Zag-Full-Blue.png';
      })();
    </script>
    <script>
      (function () {
        var btn = document.getElementById('summerpreview');
        var ply = document.getElementById('summerpreview-audio');
        btn.addEventListener('click', function (ev) {
          if (ply.paused) {
            ply.play();
            btn.innerText = 'Pause Preview';
          } else {
            ply.pause();
            btn.innerText = '▶ Hear a Preview';
          }
        });


        var subs = document.querySelectorAll(".summer-subscribe a");
        for (let index = 0; index < subs.length; index++) {
          const el = subs[index];
          el.addEventListener('click', function(ev) {
            ev.preventDefault();

            var show = el.getAttribute('data-show');

            var modal = document.getElementById('subscribe-' + show);

            modal.classList.add('block-class');
          })
        }

        var dismiss = document.querySelectorAll(".summer-modal .dismiss");
        for (let index = 0; index < dismiss.length; index++) {
          const el = dismiss[index];

          el.addEventListener("click", function() {
            el.parentElement.parentElement.classList.remove('block-class');
          })
        }
      })();
    </script>
