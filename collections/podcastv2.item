        display: none;
      }
      .sqs-edit-mode .prx-podcast-starter-meta {
        display: block;
      }
    </style>

    <script>
      (function () {
        document.addEventListener("DOMContentLoaded", _ => {
          const starterMeta = document.querySelectorAll('.prx-podcast-starter-meta .sqs-audio-embed');
          const episodeList = document.querySelector('#prx-podcast-starter > ul');

          for (const meta of starterMeta) {
            const li = document.createElement('li');

            const img = document.createElement('img');
            img.setAttribute('src', '/assets/play.svg');
            li.appendChild(img)

            const h4 = document.createElement('h4');
            h4.innerText = meta.getAttribute('data-title');
            li.appendChild(h4);

            const h5 = document.createElement('h5');
            h5.innerText = meta.getAttribute('data-author');
            li.appendChild(h5);

            const audio = document.createElement('audio');
            audio.setAttribute('preload', 'none');
            audio.setAttribute('src', meta.getAttribute('data-url'));
            li.appendChild(audio);

            li.addEventListener('click', e => {
              if (audio.paused) {
                pauseAllAudio();
                audio.play();
                img.src = '/assets/pause.svg';
              } else {
                img.src = '/assets/play.svg';
                audio.pause();
              }
            });

            episodeList.appendChild(li);
          }
        });
      })();
    </script>

